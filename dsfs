    local buttonInstances = {}
    for _, btnData in ipairs(buttons) do
        local btn = Instance.new("TextButton")
        btn.Name = btnData.Name
        btn.Text = btnData.Text
        btn.Size = btnData.Size
        btn.Position = btnData.Position
        btn.BackgroundColor3 = btnData.Color
        btn.TextColor3 = Color3.fromRGB(255, 255, 255)
        btn.Font = Enum.Font.GothamBold
        btn.TextSize = 14
        btn.Visible = btnData.Visible
        btn.Parent = contentFrame
        
        btn.MouseEnter:Connect(function()
            TweenService:Create(btn, TweenInfo.new(0.2), {
                BackgroundColor3 = btnData.Color + Color3.new(0.2, 0, 0)
            }):Play()
        end)
        btn.MouseLeave:Connect(function()
            TweenService:Create(btn, TweenInfo.new(0.2), {
                BackgroundColor3 = btnData.Color
            }):Play()
        end)
        
        buttonInstances[btnData.Name] = btn
    end

    -- Status Label (Light Red Text)
    local statusLabel = Instance.new("TextLabel")
    statusLabel.Name = "Status"
    statusLabel.Text = ""
    statusLabel.Size = UDim2.new(1, 0, 0, 20)
    statusLabel.Position = UDim2.new(0, 0, 1, -25)
    statusLabel.BackgroundTransparency = 1
    statusLabel.TextColor3 = Color3.fromRGB(255, 150, 150)
    statusLabel.Font = Enum.Font.Gotham
    statusLabel.TextSize = 12
    statusLabel.Visible = false
    statusLabel.Parent = contentFrame

    -- Dragging Functionality
    local dragging
    local dragInput
    local dragStart
    local startPos

    local function update(input)
        local delta = input.Position - dragStart
        mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end

    header.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = mainFrame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    header.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)

    UIS.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            update(input)
        end
    end)

    -- Close Button Functionality
    closeBtn.MouseButton1Click:Connect(function()
        gui:Destroy()
    end)

    -- Key Submission Logic
    local authenticated = false
    submitBtn.MouseButton1Click:Connect(function()
        if not isAuthorizedUser() then
            statusLabel.Text = "â›” USERNAME NOT AUTHORIZED"
            statusLabel.Visible = true
            return
        end

        if keyBox.Text == getRequiredKey() then
            authenticated = true
            keyFrame.Visible = false
            statusLabel.Visible = false
            for _, btn in pairs(buttonInstances) do
                btn.Visible = true
            end
        else
            statusLabel.Text = "âŒ INVALID KEY FOR "..player.Name
            statusLabel.Visible = true
            -- Shake effect
            local shake = 5
            for i = 1, 3 do
                keyBox.Position = UDim2.new(0, shake, 0, 35)
                task.wait(0.05)
                keyBox.Position = UDim2.new(0, -shake, 0, 35)
                task.wait(0.05)
                keyBox.Position = UDim2.new(0, 0, 0, 35)
            end
        end
    end)

    return {
        GUI = gui,
        Buttons = buttonInstances,
        Authenticated = function() return authenticated end
    }
end

-- ===== TELEPORT FUNCTIONS ===== --
local function spamE()
    if not eSpamEnabled then return end
    
    for i = 1, eSpamCount do
        UIS:SendKeyEvent(true, Enum.KeyCode.E, false, nil)
        task.wait(0.05)
        UIS:SendKeyEvent(false, Enum.KeyCode.E, false, nil)
        if i < eSpamCount then
            task.wait(eSpamDelay)
        end
    end
end

local lastTeleport = 0
local function teleportSpam()
    if not character:FindFirstChild("HumanoidRootPart") then return end
    
    -- Throttle teleports
    local now = tick()
    if now - lastTeleport < teleportSpeed then return end
    lastTeleport = now
    
    currentSpot = currentSpot % #teleportSpots + 1
    character.HumanoidRootPart.CFrame = CFrame.new(teleportSpots[currentSpot])
    
    -- Only spam E occasionally
    if math.random(1, 3) == 1 then
        spamE()
    end
end

-- ===== MAIN SCRIPT ===== --
local ui = createUI()

-- Make all ProximityPrompts instant
for _, v in pairs(workspace:GetDescendants()) do
    if v:IsA("ProximityPrompt") then
        v.HoldDuration = 0
        v.ClickablePrompt = true
    end
end
workspace.DescendantAdded:Connect(function(v)
    if v:IsA("ProximityPrompt") then
        v.HoldDuration = 0
        v.ClickablePrompt = true
    end
end)

-- Connect UI Buttons
ui.Buttons.TeleportBtn.MouseButton1Click:Connect(function()
    if not ui.Authenticated() then return end
    teleportEnabled = not teleportEnabled
    ui.Buttons.TeleportBtn.Text = teleportEnabled and "ðŸ›‘ STOP TELEPORT" or "ðŸš€ START TELEPORT"
    ui.Buttons.TeleportBtn.BackgroundColor3 = teleportEnabled and Color3.fromRGB(180, 0, 0) or Color3.fromRGB(120, 0, 0)
end)

ui.Buttons.ESpamBtn.MouseButton1Click:Connect(function()
    if not ui.Authenticated() then return end
    eSpamEnabled = not eSpamEnabled
    ui.Buttons.ESpamBtn.Text = eSpamEnabled and "ðŸ”˜ E-SPAM: ON" or "âŒ E-SPAM: OFF"
    ui.Buttons.ESpamBtn.BackgroundColor3 = eSpamEnabled and Color3.fromRGB(100, 0, 0) or Color3.fromRGB(60, 0, 0)
end)

ui.Buttons.HopBtn.MouseButton1Click:Connect(function()
    if not ui.Authenticated() then return end
    smartServerHop()
end)

-- Main Loop
RunService.Heartbeat:Connect(function()
    if ui.Authenticated() and teleportEnabled then
        teleportSpam()
    end
end)

-- Handle character changes
player.CharacterAdded:Connect(function(newChar)
    character = newChar
    if ui.Authenticated() and teleportEnabled then
        teleportSpam()
    end
end)
