    menuTitle.Position = UDim2.new(0, 0, 0, -25)
    menuTitle.BackgroundTransparency = 1
    menuTitle.TextColor3 = Color3.fromRGB(255, 50, 50)
    menuTitle.Font = Enum.Font.GothamBlack
