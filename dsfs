    menuTitle.TextStrokeTransparency = 0.7
    menuTitle.TextStrokeColor3 = Color3.fromRGB(255, 0, 0)
    menuTitle.Parent = mainFrame

    -- Header (Bright Red)
    local header = Instance.new("TextButton")
    header.Name = "Header"
    header.Text = ""
    header.Size = UDim2.new(1, 0, 0, 40)
    header.BackgroundColor3 = Color3.fromRGB(180, 0, 0)
    header.BorderSizePixel = 0
    header.AutoButtonColor = false
    header.Parent = mainFrame

    -- Title (White Text)
    local title = Instance.new("TextLabel")
    title.Text = "Perfecte Cash Farm"
    title.Size = UDim2.new(1, -50, 1, 0)
    title.Position = UDim2.new(0, 10, 0, 0)
    title.BackgroundTransparency = 1
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.Font = Enum.Font.GothamBold
    title.TextSize = 16
    title.TextXAlignment = Enum.TextXAlignment.Left
    title.Parent = header

    -- Close Button (Dark Red)
    local closeBtn = Instance.new("TextButton")
    closeBtn.Name = "CloseButton"
    closeBtn.Text = "Ã—"
    closeBtn.Size = UDim2.new(0, 40, 1, 0)
    closeBtn.Position = UDim2.new(1, -40, 0, 0)
    closeBtn.BackgroundColor3 = Color3.fromRGB(80, 0, 0)
    closeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    closeBtn.Font = Enum.Font.GothamBlack
    closeBtn.TextSize = 20
    closeBtn.Parent = header

    -- Content Frame (Transparent)
    local contentFrame = Instance.new("Frame")
    contentFrame.Name = "Content"
    contentFrame.Size = UDim2.new(1, -20, 1, -60)
    contentFrame.Position = UDim2.new(0, 10, 0, 45)
    contentFrame.BackgroundTransparency = 1
    contentFrame.Parent = mainFrame

