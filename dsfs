    local keyFrame = Instance.new("Frame")
    keyFrame.Name = "KeyAuth"
    keyFrame.Size = UDim2.new(1, 0, 0, 120)
    keyFrame.Position = UDim2.new(0, 0, 0, 0)
    keyFrame.BackgroundColor3 = Color3.fromRGB(40, 0, 0)
    keyFrame.BorderSizePixel = 0
    keyFrame.Parent = contentFrame

    -- Key Title (Medium Red)
    local keyTitle = Instance.new("TextLabel")
    keyTitle.Text = "ENTER LICENSE KEY:"
    keyTitle.Size = UDim2.new(1, 0, 0, 30)
    keyTitle.Position = UDim2.new(0, 0, 0, 0)
    keyTitle.BackgroundColor3 = Color3.fromRGB(120, 0, 0)
    keyTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
    keyTitle.Font = Enum.Font.GothamBold
    keyTitle.TextSize = 14
    keyTitle.Parent = keyFrame

    -- Key Input Box (Dark Red)
    local keyBox = Instance.new("TextBox")
    keyBox.Name = "KeyInput"
    keyBox.Size = UDim2.new(1, 0, 0, 40)
    keyBox.Position = UDim2.new(0, 0, 0, 35)
    keyBox.BackgroundColor3 = isAuthorizedUser() and Color3.fromRGB(50, 0, 0) or Color3.fromRGB(60, 0, 0)
    keyBox.TextColor3 = Color3.fromRGB(255, 255, 255)
    keyBox.Font = Enum.Font.Gotham
    keyBox.PlaceholderText = isAuthorizedUser() and "Enter your key" or "Access Denied"
    keyBox.PlaceholderColor3 = isAuthorizedUser() and Color3.fromRGB(180, 180, 180) or Color3.fromRGB(255, 120, 120)
    keyBox.Text = ""
    keyBox.TextSize = 16
    keyBox.TextEditable = isAuthorizedUser()
    keyBox.Parent = keyFrame

    -- Submit Button (Bright Red)
    local submitBtn = Instance.new("TextButton")
    submitBtn.Name = "SubmitKey"
    submitBtn.Text = isAuthorizedUser() and "ðŸ”‘ ACTIVATE" or "â›” ACCESS DENIED"
    submitBtn.Size = UDim2.new(1, 0, 0, 30)
    submitBtn.Position = UDim2.new(0, 0, 0, 80)
    submitBtn.BackgroundColor3 = isAuthorizedUser() and Color3.fromRGB(150, 0, 0) or Color3.fromRGB(80, 0, 0)
    submitBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    submitBtn.Font = Enum.Font.GothamBold
    submitBtn.TextSize = 14
    submitBtn.Parent = keyFrame

    -- Control Buttons (Various Reds)
    local buttons = {
        {
            Name = "TeleportBtn",
            Text = "ðŸš€ START TELEPORT",
            Color = Color3.fromRGB(120, 0, 0),
            Size = UDim2.new(1, 0, 0, 50),
            Position = UDim2.new(0, 0, 0, 130),
            Visible = false
        },
        {
            Name = "ESpamBtn",
            Text = "ðŸ”˜ AUTO E-SPAM: ON",
            Color = Color3.fromRGB(100, 0, 0),
            Size = UDim2.new(1, 0, 0, 50),
            Position = UDim2.new(0, 0, 0, 190),
            Visible = false
        },
        {
            Name = "HopBtn",
            Text = "ðŸ”„ SERVER HOP (LOWEST POP)",
            Color = Color3.fromRGB(80, 0, 0),
            Size = UDim2.new(1, 0, 0, 50),
            Position = UDim2.new(0, 0, 0, 250),
            Visible = false
